generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// #region Account and all the things that is wrong with it

model Account {
  Id       String @id @default(cuid())
  Username String @unique

  // General info go here
  DisplayName String
  AvatarUrl   String?
  Bio         String?

  UserCertificate UserCertificate[]
  CourseEnroll    CourseEnroll[]
  ExamSubmission  ExamSubmission[]
  Post            Post[]

  // Special place for role
  AccountRole AccountRole[]
  Mentor      Mentor?
  Admin       Admin?

  AccountIdentifier AccountIdentifier[]

  // Active check
  CreatedAt            DateTime              @default(now())
  DeletedAt            DateTime?
  lessonProgresses     LessonProgress[]
  sentMessages         Message[]             @relation("sentMessages")
  receivedMessages     Message[]             @relation("receivedMessages")
  courseReviews        CourseReview[]
  reports              Report[]
  accountSuspensions   AccountSuspension[]
  verificationRequests VerificationRequest[]
}

model AccountIdentifier {
  Id String @id @default(cuid())

  Identifier String
  Secret     String? // password hash
  Verified   Boolean @default(false)

  ProviderId Int?
  Provider   Provider? @relation(fields: [ProviderId], references: [Id])

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  @@unique([ProviderId, Identifier])
}

model Provider {
  Id         Int                 @id @default(autoincrement())
  Name       String              @unique // e.g. "username", "email", "google"
  Enabled    Boolean             @default(true)
  Config     Json? // optional: store API keys, settings
  Identities AccountIdentifier[]
}

model AccountRole {
  AccountId String      @id
  Account   Account     @relation(fields: [AccountId], references: [Id])
  Role      SpecialRole
}

model Mentor {
  AccountId String  @id
  Account   Account @relation(fields: [AccountId], references: [Id])

  Name  String?
  Email String?
  Phone String?

  courses       Course[]
  exams         Exam[]
  courseLessons CourseLesson[]

  // Active check
  CreatedAt       DateTime         @default(now())
  DeletedAt       DateTime?
  specializations Specialization[]
}

model Admin {
  AccountId String  @id
  Account   Account @relation(fields: [AccountId], references: [Id])

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model AccountSuspension {
  Id        String  @id @default(cuid())
  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  Reason      String
  SuspendedBy String? // Admin ID
  SuspendedAt DateTime  @default(now())
  ResolvedAt  DateTime?
  ResolvedBy  String?

  CreatedAt DateTime @default(now())
}

// #endregion

// #region COURSE AND MORE COURSE WHY IS THIS SO COMPLEX
model Course {
  Id Int @id @default(autoincrement())

  Name        String
  Description String

  CreatedById String?
  CreatedBy   Mentor? @relation(fields: [CreatedById], references: [AccountId])

  CategoryId           Int?
  Category             Category?              @relation(fields: [CategoryId], references: [Id])
  Certificate          Certificate?
  CourseModule         CourseModule[]
  CourseEnroll         CourseEnroll[]
  QuestionBank         QuestionBank[]
  SpecializationCourse SpecializationCourse[]
  Embedding            CourseEmbedding?

  // Verified check
  PublishedAt DateTime?
  LastUpdated DateTime?

  // Temp
  Draft Json? // jsonb?

  // Active check
  CreatedAt            DateTime              @default(now())
  DeletedAt            DateTime?
  courseSkills         CourseSkill[]
  courseReviews        CourseReview[]
  verificationRequests VerificationRequest[]
}

model Specialization {
  Id Int @id @default(autoincrement())

  SpecializationCode String @unique
  SpecializationName String

  CreatedById String?
  CreatedBy   Mentor? @relation(fields: [CreatedById], references: [AccountId])

  CategoryId Int?
  Category   Category? @relation(fields: [CategoryId], references: [Id])

  SpecializationCourse SpecializationCourse[]
  CourseEnroll         CourseEnroll[]
  Certificate          Certificate?

  // Verified check
  PublishedAt DateTime?
  LastUpdated DateTime?

  // Active check
  CreatedAt            DateTime              @default(now())
  DeletedAt            DateTime?
  verificationRequests VerificationRequest[]
}

model VerificationRequest {
  Id String @id @default(cuid())

  CourseId Int?
  Course   Course? @relation(fields: [CourseId], references: [Id])

  SpecializationId Int?
  Specialization   Specialization? @relation(fields: [SpecializationId], references: [Id])

  ReviewedById String?
  ReviewedBy   Account? @relation(fields: [ReviewedById], references: [Id])

  DraftSnapshot  Json?
  ApprovalStatus VerificationStatus @default(Pending)
  Reason         String?
  RequestType    RequestType        @default(New)
  ReviewedAt     DateTime?
  CreatedAt      DateTime           @default(now())
}

model SpecializationCourse {
  Id Int @id @default(autoincrement())

  SpecId         Int
  Specialization Specialization @relation(fields: [SpecId], references: [Id])

  CourseId Int
  Course   Course @relation(fields: [CourseId], references: [Id])

  OrderNo Int

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?

  @@unique([SpecId, CourseId])
}

model Category {
  Id          Int     @id @default(autoincrement())
  Name        String  @unique
  Slug        String  @unique
  Description String?

  courses         Course[]
  specializations Specialization[]
  // Active check
  CreatedAt       DateTime         @default(now())
  DeletedAt       DateTime?
}

model CourseModule {
  Id    Int    @id @default(autoincrement())
  Title String @default("Module Title")

  CourseId Int
  Course   Course @relation(fields: [CourseId], references: [Id])

  OrderNo Int

  ModuleItems ModuleItem[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model ModuleItem {
  Id String @id @default(cuid())

  OrderNo Int

  EstimatedDuration Int?

  CourseModuleId Int?
  CourseModule   CourseModule? @relation(fields: [CourseModuleId], references: [Id])

  Exam Exam[]

  CourseLesson CourseLesson[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model CourseLesson {
  Id String @id @default(cuid())

  Title String

  LessonType LessonType

  VideoUrl String? // For video type lesson
  DocUrl   String? // For doc type lesson

  ModuleItemId String?
  ModuleItem   ModuleItem? @relation(fields: [ModuleItemId], references: [Id])

  CreatedById String?
  CreatedBy   Mentor? @relation(fields: [CreatedById], references: [AccountId])

  QuestionBank QuestionBank[]

  // Active check
  CreatedAt        DateTime         @default(now())
  DeletedAt        DateTime?
  lessonProgresses LessonProgress[]
  lessonResources  LessonResource[]
}

model LessonResource {
  Id       Int          @id @default(autoincrement())
  LessonId String
  Lesson   CourseLesson @relation(fields: [LessonId], references: [Id])
  Name     String
  Url      String
  OrderNo  Int?

  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model CourseSkill {
  Id Int @id @default(autoincrement())

  CourseId Int
  Course   Course @relation(fields: [CourseId], references: [Id])

  SkillName String

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model CourseEmbedding {
  Id       Int    @id @default(autoincrement())
  CourseId Int    @unique
  Course   Course @relation(fields: [CourseId], references: [Id])
  Vector   Json // Stores the float array as JSON for MySQL compatibility
}

// #endregion

// #region Enrollment and progress tracking

model CourseEnroll {
  Id Int @id @default(autoincrement())

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  CourseId Int?
  Course   Course? @relation(fields: [CourseId], references: [Id])

  SpecializationId Int?
  Specialization   Specialization? @relation(fields: [SpecializationId], references: [Id])

  Status      Status    @default(Enrolled)
  EnrolledAt  DateTime  @default(now())
  CompletedAt DateTime?

  // Active check
  CreatedAt        DateTime         @default(now())
  DeletedAt        DateTime?
  lessonProgresses LessonProgress[]
}

model LessonProgress {
  Id String @id @default(cuid())

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  CourseEnrollId Int
  CourseEnroll   CourseEnroll @relation(fields: [CourseEnrollId], references: [Id])

  LessonId     String
  CourseLesson CourseLesson @relation(fields: [LessonId], references: [Id])

  IsCompleted Boolean   @default(false)
  CompletedAt DateTime?

  CreatedAt DateTime @default(now())

  @@unique([AccountId, CourseEnrollId, LessonId])
}

// #endregion

// #region The great exam insanity
model Exam {
  Id Int @id @default(autoincrement())

  ModuleItemId String
  ModuleItem   ModuleItem @relation(fields: [ModuleItemId], references: [Id])

  Title       String
  Description String

  CreatedById String?
  CreatedBy   Mentor? @relation(fields: [CreatedById], references: [AccountId])

  // Duration settings
  DurationPreset DurationPreset?
  DurationCustom Int? // in minute // for custom duration

  ExamQuestion   ExamQuestion[]
  ExamSubmission ExamSubmission[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

// model DurationPreset {
//   Id Int @id @default(autoincrement())

//   Duration Int // in minute

//   Exam Exam[] @relation("Slot")
// }

model QuestionBank {
  Id String @id @default(cuid())

  LessonId     String?
  CourseLesson CourseLesson? @relation(fields: [LessonId], references: [Id])

  QuestionText String       @db.Text
  Type         QuestionType @default(MCQ)

  // for Essay
  Answer String? @db.Text

  // for MCQ Fill and TrueFalse
  ExamAnswer   ExamAnswer[]
  ExamQuestion ExamQuestion[]
  Course       Course?        @relation(fields: [courseId], references: [Id])
  courseId     Int?

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model ExamQuestion {
  Id String @id @default(cuid())

  // reference to exam
  ExamId Int
  Exam   Exam @relation(fields: [ExamId], references: [Id])

  // reference to question bank
  QuestionId   String
  QuestionBank QuestionBank @relation(fields: [QuestionId], references: [Id])

  //
  StudentAnswer StudentAnswer[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model ExamAnswer {
  Id String @id @default(cuid())

  AnswerText String @db.Text

  IsCorrect Boolean @default(false)

  QuestionId   String
  QuestionBank QuestionBank @relation(fields: [QuestionId], references: [Id])

  StudentAnswer StudentAnswer[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model ExamSubmission {
  Id String @id @default(cuid())

  ExamId Int
  Exam   Exam @relation(fields: [ExamId], references: [Id])

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  SubmittedAt DateTime @default(now())
  Score       Int?

  StudentAnswer StudentAnswer[]

  // Active check
  CreatedAt DateTime @default(now())
}

model StudentAnswer {
  Id String @id @default(cuid())

  SubmissionId   String
  ExamSubmission ExamSubmission @relation(fields: [SubmissionId], references: [Id])

  QuestionId String

  // for MCQ/Fill/TF
  AnswerId String?

  // for essay
  Answer String? @db.Text

  IsCorrect      Boolean? // snapshot at submission time
  Score          Int? // snapshot at submission time
  ExamQuestion   ExamQuestion? @relation(fields: [examQuestionId], references: [Id])
  examQuestionId String?
  ExamAnswer     ExamAnswer?   @relation(fields: [examAnswerId], references: [Id])
  examAnswerId   String?

  // Active check
  CreatedAt DateTime @default(now())
}

// #endregion

// #region Review system
model CourseReview {
  Id Int @id @default(autoincrement())

  CourseId Int
  Course   Course @relation(fields: [CourseId], references: [Id])

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  Rating  Int // 1 to 5
  Comment String?

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

// #endregion

// #region Certificate system

model Certificate {
  Id Int @id @default(autoincrement())

  UserCertificate UserCertificate[]

  CertificateType CertificateType

  CourseId Int?    @unique
  Course   Course? @relation(fields: [CourseId], references: [Id])

  SpecializationId Int?            @unique
  Specialization   Specialization? @relation(fields: [SpecializationId], references: [Id])

  // CreatorId Int 
  // CreatedBy Mentor

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model UserCertificate {
  Id Int @id @default(autoincrement())

  CertificateId Int
  Certificate   Certificate @relation(fields: [CertificateId], references: [Id])

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

// #endregion

// #region Post and Messaging system

// Posts
model Post {
  Id String @id @default(cuid())

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  // Self-reference section
  // Post in first topic post
  ParentId String?
  Parent   Post?   @relation("SubPost", fields: [ParentId], references: [Id])
  SubPost  Post[]  @relation("SubPost")

  // Post that reply to other post
  ReplyId String?
  ReplyTo Post?   @relation("Reply", fields: [ReplyId], references: [Id])
  Replied Post[]  @relation("Reply")

  // Active check
  CreatedAt    DateTime      @default(now())
  DeletedAt    DateTime?
  postRemovals PostRemoval[]
}

model PostRemoval {
  Id     String @id @default(cuid())
  PostId String
  Post   Post   @relation(fields: [PostId], references: [Id])

  Reason     String
  RemovedBy  String? // Admin ID
  RemovedAt  DateTime  @default(now())
  RestoredAt DateTime? // if restored

  CreatedAt DateTime @default(now())
}

// Messages

model Message {
  Id         String  @id @default(cuid())
  SenderId   String
  Sender     Account @relation(fields: [SenderId], references: [Id], name: "sentMessages")
  ReceiverId String
  Receiver   Account @relation(fields: [ReceiverId], references: [Id], name: "receivedMessages")

  Content String
  IsRead  Boolean   @default(false)
  ReadAt  DateTime?

  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

// #endregion

// #region Misc models

model Report {
  Id        String  @id @default(cuid())
  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  Type          String // "bug", "issue", "other"
  Title         String
  Description   String
  AttachmentUrl String?

  Status     String    @default("Open") // Open, InProgress, Resolved, Closed
  ResolvedAt DateTime?

  CreatedAt DateTime @default(now())
}

// #endregion

// #region Special place for enums because I don't want them anywhere near the actual tables
enum SpecialRole {
  Mentor
  Admin
  Moderator
}

enum QuestionType {
  MCQ
  Fill
  Essay
  TF
}

enum DurationPreset {
  P_15
  P_30
  P_60
  P_90
  P_120
}

enum LessonType {
  Video
  Document
}

enum CertificateType {
  Course
  Specialization
}

enum Status {
  Enrolled
  InProgress
  Completed
}

enum VerificationStatus {
  Pending
  Approved
  Rejected
}

enum RequestType {
  New
  Update
}

// #endregion
