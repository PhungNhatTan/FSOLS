generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// #region Account and all the things that is wrong with it
model Account {
  Id       String @id @default(cuid())
  Username String @unique

  // General info go here
  DisplayName String

  UserCertificate UserCertificate[]
  CourseEnroll    CourseEnroll[]
  ExamSubmission  ExamSubmission[]
  Post            Post[]

  // Special place for role
  AccountRole AccountRole[]
  Mentor      Mentor?
  Admin       Admin?

  AccountIdentifier AccountIdentifier[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model AccountIdentifier {
  Id String @id @default(cuid())

  Identifier String
  Secret     String? // password hash
  Verified   Boolean @default(false)

  ProviderId Int?
  Provider   Provider? @relation(fields: [ProviderId], references: [Id])

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  @@unique([ProviderId, Identifier])
}

model Provider {
  Id         Int                 @id @default(autoincrement())
  Name       String              @unique // e.g. "username", "email", "google"
  Enabled    Boolean             @default(true)
  Config     Json? // optional: store API keys, settings
  Identities AccountIdentifier[]
}

model AccountRole {
  AccountId String      @id
  Account   Account     @relation(fields: [AccountId], references: [Id])
  Role      SpecialRole
}

model Mentor {
  AccountId String  @id
  Account   Account @relation(fields: [AccountId], references: [Id])

  courses       Course[]
  exams         Exam[]
  courseLessons CourseLesson[]

  // Active check
  CreatedAt       DateTime         @default(now())
  DeletedAt       DateTime?
  specializations Specialization[]
}

model Admin {
  AccountId String  @id
  Account   Account @relation(fields: [AccountId], references: [Id])

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

// #endregion

// #region COURSE AND MORE COURSE WHY IS THIS SO COMPLEX
model Course {
  Id Int @id @default(autoincrement())

  Name        String
  Description String

  CreatedById String?
  CreatedBy   Mentor? @relation(fields: [CreatedById], references: [AccountId])

  Certificate          Certificate?
  CourseModule         CourseModule[]
  CourseEnroll         CourseEnroll[]
  QuestionBank         QuestionBank[]
  SpecializationCourse SpecializationCourse[]

  // Verified check
  IsVerified Boolean @default(false)

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model Specialization {
  Id Int @id @default(autoincrement())

  SpecializationCode String @unique
  SpecializationName String

  CreatedById String?
  CreatedBy   Mentor? @relation(fields: [CreatedById], references: [AccountId])

  SpecializationCourse SpecializationCourse[]
  CourseEnroll         CourseEnroll[]
  Certificate          Certificate?

  // Verified check
  IsVerified Boolean @default(false)

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model SpecializationCourse {
  Id Int @id @default(autoincrement())

  SpecId         Int
  Specialization Specialization @relation(fields: [SpecId], references: [Id])

  CourseId Int
  Course   Course @relation(fields: [CourseId], references: [Id])

  OrderNo Int

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?

  @@unique([SpecId, CourseId])
}

model CourseModule {
  Id Int @id @default(autoincrement())

  CourseId Int
  Course   Course @relation(fields: [CourseId], references: [Id])

  OrderNo Int // Initial adding in steps of 10 (10 20 30 40 50 ...ect) for easier insertion in middle

  ModuleItems ModuleItem[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model ModuleItem {
  Id String @id @default(cuid())

  OrderNo Int // Initial adding in steps of 10 (10 20 30 40 50 ...ect) for easier insertion in middle

  CourseModuleId Int?
  CourseModule   CourseModule? @relation(fields: [CourseModuleId], references: [Id])

  Exam Exam[]

  CourseLesson CourseLesson[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model CourseLesson {
  Id String @id @default(cuid())

  Title String

  LessonType LessonType

  VideoUrl String? // For video type lesson
  DocUrl   String? // For doc type lesson

  ModuleItemId String?
  ModuleItem   ModuleItem? @relation(fields: [ModuleItemId], references: [Id])

  CreatedById String?
  CreatedBy   Mentor? @relation(fields: [CreatedById], references: [AccountId])

  QuestionBank QuestionBank[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model CourseEnroll {
  Id Int @id @default(autoincrement())

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  CourseId Int?
  Course   Course? @relation(fields: [CourseId], references: [Id])

  SpecializationId Int?
  Specialization   Specialization? @relation(fields: [SpecializationId], references: [Id])

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

// #endregion

// #region The great exam insanity
model Exam {
  Id Int @id @default(autoincrement())

  ModuleItemId String
  ModuleItem   ModuleItem @relation(fields: [ModuleItemId], references: [Id])

  Title       String
  Description String

  CreatedById String?
  CreatedBy   Mentor? @relation(fields: [CreatedById], references: [AccountId])

  // SlotId Int
  // DurationPreset DurationPreset @relation("Slot", fields: [SlotId], references: [Id])

  // Must use one of the two, should be application-level check since database-level check
  // is not possible with Prisma
  DurationPreset DurationPreset?
  DurationCustom Int? // in minute // for custom duration

  ExamQuestion   ExamQuestion[]
  ExamSubmission ExamSubmission[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

// model DurationPreset {
//   Id Int @id @default(autoincrement())

//   Duration Int // in minute

//   Exam Exam[] @relation("Slot")
