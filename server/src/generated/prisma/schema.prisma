model QuestionBank {
  Id String @id @default(cuid())

  LessonId     String?
  CourseLesson CourseLesson? @relation(fields: [LessonId], references: [Id])

  QuestionText String
  Type         QuestionType @default(MCQ)

  // for Essay
  Answer String?

  // for MCQ Fill and TrueFalse
  ExamAnswer   ExamAnswer[]
  ExamQuestion ExamQuestion[]
  Course       Course?        @relation(fields: [courseId], references: [Id])
  courseId     Int?

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model ExamQuestion {
  Id String @id @default(cuid())

  // reference to exam
  ExamId Int
  Exam   Exam @relation(fields: [ExamId], references: [Id])

  // reference to question bank
  QuestionId   String
  QuestionBank QuestionBank @relation(fields: [QuestionId], references: [Id])

  //
  StudentAnswer StudentAnswer[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model ExamAnswer {
  Id String @id @default(cuid())

  AnswerText String

  IsCorrect Boolean @default(false)

  QuestionId   String
  QuestionBank QuestionBank @relation(fields: [QuestionId], references: [Id])

  StudentAnswer StudentAnswer[]

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model ExamSubmission {
  Id String @id @default(cuid())

  ExamId Int
  Exam   Exam @relation(fields: [ExamId], references: [Id])

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  SubmittedAt DateTime @default(now())
  Score       Int?

  StudentAnswer StudentAnswer[]

  // Active check
  CreatedAt DateTime @default(now())
}

model StudentAnswer {
  Id String @id @default(cuid())

  SubmissionId   String
  ExamSubmission ExamSubmission @relation(fields: [SubmissionId], references: [Id])

  QuestionId String

  // for MCQ/Fill/TF
  AnswerId String?

  // for essay
  Answer String?

  IsCorrect      Boolean? // snapshot at submission time
  Score          Int? // snapshot at submission time
  ExamQuestion   ExamQuestion? @relation(fields: [examQuestionId], references: [Id])
  examQuestionId String?
  ExamAnswer     ExamAnswer?   @relation(fields: [examAnswerId], references: [Id])
  examAnswerId   String?

  // Active check
  CreatedAt DateTime @default(now())
}

// #endregion

model Certificate {
  Id Int @id @default(autoincrement())

  UserCertificate UserCertificate[]

  CertificateType CertificateType

  CourseId Int?    @unique
  Course   Course? @relation(fields: [CourseId], references: [Id])

  SpecializationId Int?            @unique
  Specialization   Specialization? @relation(fields: [SpecializationId], references: [Id])

  // CreatorId Int 
  // CreatedBy Mentor

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model UserCertificate {
  Id Int @id @default(autoincrement())

  CertificateId Int
  Certificate   Certificate @relation(fields: [CertificateId], references: [Id])

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

model Post {
  Id String @id @default(cuid())

  AccountId String
  Account   Account @relation(fields: [AccountId], references: [Id])

  // Self-reference section
  // Post in first topic post
  ParentId String?
  Parent   Post?   @relation("SubPost", fields: [ParentId], references: [Id])
  SubPost  Post[]  @relation("SubPost")

  // Post that reply to other post
  ReplyId String?
  ReplyTo Post?   @relation("Reply", fields: [ReplyId], references: [Id])
  Replied Post[]  @relation("Reply")

  // Active check
  CreatedAt DateTime  @default(now())
  DeletedAt DateTime?
}

// #region Special place for enums because I don't want them anywhere near the actual tables
enum SpecialRole {
  Mentor
  Admin
  Moderator
}

enum QuestionType {
  MCQ
  Fill
  Essay
  TF
}

enum DurationPreset {
  P_15
  P_30
  P_60
  P_90
  P_120
}

enum LessonType {
  Video
  Document
}

enum CertificateType {
  Course
  Specialization
}

// #endregion
